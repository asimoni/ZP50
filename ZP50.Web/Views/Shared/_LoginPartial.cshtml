@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", new { Area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @*@Html.AntiForgeryToken()*@

    <ul class="navbar-nav ">

        <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()"  class="nav-link">Disconnetti</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav ">
        <li  class="nav-item">@Html.ActionLink("Accedi", "Login", "Account", routeValues: new { Area = "" }, htmlAttributes: new { id = "loginLink", @class="nav-link" })</li>
    </ul>
}
