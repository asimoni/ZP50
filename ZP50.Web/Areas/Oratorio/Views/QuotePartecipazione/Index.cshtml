@model IEnumerable<ZP50.Core.Oratorio.QuotaPartecipazione>

@{
    ViewBag.Title = "Quote di partecipazione";
}


<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-2">
            <h2>@ViewBag.Title</h2>
            @Html.ActionLink("Crea nuovo", "Create", null, new { @class = "btn btn-outline-success" })
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descrizione)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Costo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    <a class="btn btn-secondary" href="@Url.Action("Edit", new { id = item.ID })"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
    }

        </table>
    </div>
</div>


