@using ZP50.Web.Areas.Oratorio.Models

@model PartecipanteFilterModel


<div class="form-group  mb-2 mr-2">
    @Html.DropDownListFor(model => model.ClasseFrequentata, ValueBundle.ClassiScolastiche, "classe...", new { @class = "form-control" })
</div>
<div class="form-group  mb-2 mr-2">
    @Html.DropDownListFor(model => model.Quota, ValueBundle.Quote, "quota...", new { @class = "form-control" })
</div>

<div class="input-group  mb-2 mr-2">
    @Html.TextBoxFor(model => model.Query, new { @class = "form-control py-2 border-right-0 border ", type = "search", placeholder = "nome da cercare..." })
</div>
<div class="form-group  mb-2 mr-2">
    <button class="btn btn-outline-secondary" type="submit">
        <i class="fa fa-search"></i> Trova
    </button>
    </div>
