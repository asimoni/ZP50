@model ZP50.Core.Oratorio.QuotaAcquistata

@using (Html.BeginForm("AggiornaQuota", "Partecipanti", FormMethod.Post))
{
    @Html.AntiForgeryToken();



    Html.ValidationSummary(true, "", new { @class = "text-danger" });
    <div class="list-group">

        <div class="list-group-item">
            <div class="d-flex justify-content-between">
                <div class="form-inline">
                    @Html.HiddenFor(model => model.PartecipanteID)
                    @Html.HiddenFor(model => model.QuotaPartecipazioneID)
                    <h5>@Model.QuotaPartecipazione.Descrizione <small>@Model.QuotaPartecipazione.Costo.ToString("C")</small></h5>
                </div>
                <div class="form-inline">
                    @Html.LabelFor(model => model.Versato)
                    @Html.TextBoxFor(model => model.Versato, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="d-flex justify-content-between">
        @Html.ActionLink("Indietro", "Quote", new { id = Model.PartecipanteID })
        <input type="submit" value="Salva" class="btn btn-primary" />
    </div>
}