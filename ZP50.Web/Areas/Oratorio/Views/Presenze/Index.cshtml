@model IEnumerable<ZP50.Core.Oratorio.Presenza>

@{
    ViewBag.Title = "Index";
}

<h2>Presenze</h2>

<p>
    <a href="@Url.Action("Ingresso")" class="btn btn-outline-success"><i class="fa fa-arrow-circle-o-down"></i>&nbsp;Ingresso</a>
    <a href="@Url.Action("Uscita")" class="btn btn-outline-dark"><i class="fa fa-arrow-circle-o-up"></i>&nbsp;Uscita</a>   
</p>

<div class="list-group">
    @foreach (var item in Model)
    {
        <div class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@item.Partecipante.Cognome @item.Partecipante.Nome</h5>
                <small>@item.Giorno.ToShortDateString()</small>
            </div>
            <div class="d-flex w-100 justify-content-between">
                <span><i class="fa fa-arrow-circle-o-down"></i> @item.Ingresso.ToShortTimeString()</span>
                @if (item.Uscita.HasValue)
                {
                    <span><i class="fa fa-arrow-circle-o-up"></i> @item.Ingresso.ToShortTimeString()</span>
                }
                else
                {
                    <span><i class="fa fa-arrow-circle-o-up"></i> --:-- </span>
                }
            </div>
        </div>

    }
</div>

